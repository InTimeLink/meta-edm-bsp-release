From 59713da2490f41caef39a5fe238da7b968babe12 Mon Sep 17 00:00:00 2001
From: Richard Hu <richard.hu@technexion.com>
Date: Thu, 5 Nov 2015 15:45:24 +0800
Subject: [PATCH] picosom-imx6: yocto - fix imxplayer no picture issue

---
 arch/arm/boot/dts/imx6qdl-picosom.dtsi |   12 ++++++------
 1 file changed, 6 insertions(+), 6 deletions(-)

diff --git a/arch/arm/boot/dts/imx6qdl-picosom.dtsi b/arch/arm/boot/dts/imx6qdl-picosom.dtsi
index 8ffcc1f..49714da 100644
--- a/arch/arm/boot/dts/imx6qdl-picosom.dtsi
+++ b/arch/arm/boot/dts/imx6qdl-picosom.dtsi
@@ -106,10 +106,9 @@
 
 	mxcfb1: fb@0 {
 		compatible = "fsl,mxc_sdc_fb";
-		disp_dev = "hdmi";
-		interface_pix_fmt = "RGB24";
-		mode_str ="1920x1080M@60";
-		default_bpp = <32>;
+		disp_dev = "ldb";
+		interface_pix_fmt = "RGB666";
+		default_bpp = <16>;
 		int_clk = <0>;
 		late_init = <0>;
 		status = "disabled";
@@ -117,8 +116,9 @@
 
 	mxcfb2: fb@1 {
 		compatible = "fsl,mxc_sdc_fb";
-		disp_dev = "ldb";
-		interface_pix_fmt = "RGB666";
+		disp_dev = "hdmi";
+		interface_pix_fmt = "RGB24";
+		mode_str ="1920x1080M@60";
 		default_bpp = <24>;
 		int_clk = <0>;
 		late_init = <0>;
