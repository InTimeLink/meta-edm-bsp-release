From 9dd4cbbd59cc6dc684a390d867ba2eb65f9f8e4c Mon Sep 17 00:00:00 2001
From: Richard Hu <richard.hu@technexion.com>
Date: Mon, 17 Aug 2015 11:16:58 +0800
Subject: [PATCH] edm-cf-imx6: put uEnv.txt into root directory instead of
 /boot in 1st FAT partition

---
 include/configs/edm-cf-imx6.h |    4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/include/configs/edm-cf-imx6.h b/include/configs/edm-cf-imx6.h
index 086432f..39428ee 100644
--- a/include/configs/edm-cf-imx6.h
+++ b/include/configs/edm-cf-imx6.h
@@ -216,7 +216,7 @@
 	"else " \
 		"bootz; " \
 	"fi;\0" \
-"bootenv=/boot/uEnv.txt\0" \
+"bootenv=uEnv.txt\0" \
 "loadbootenv=fatload mmc ${mmcdev} ${loadaddr} ${bootenv}\0" \
 "importbootenv=echo Importing environment from mmc ...; " \
 	"env import -t -r $loadaddr $filesize\0" \
@@ -317,7 +317,7 @@
 		"else " \
 			"bootz; " \
 		"fi;\0" \
-	"bootenv=/boot/uEnv.txt\0" \
+	"bootenv=uEnv.txt\0" \
 	"loadbootenv=fatload mmc ${mmcdev} ${loadaddr} ${bootenv}\0" \
 	"importbootenv=echo Importing environment from mmc ...; " \
 		"env import -t -r $loadaddr $filesize\0" \
-- 
